@model CartViewModel

<h2>Cart: All the books you want to borrow</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Books:</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Cart.CartItems)
        {
            <tr>
                <td class="text-left">
                    <a class="btn btn-primary" asp-controller="Cart" asp-action="RemoveFromCart" asp-route-bookId="@item.Book.BookId">Remove</a>
                </td>
                <td class="text-left">Book: @item.Book.Title</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">

    <a class="btn btn-primary" asp-controller="Cart" asp-action="ClearCart">Clear Cart</a>

    <a class="btn" asp-controller="Customer" asp-action="SelectCustomer">Continue</a>

</div>
